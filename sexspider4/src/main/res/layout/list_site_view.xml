<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/list_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/txt_list_title"
        android:id="@+id/site_list_title"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="@dimen/list_item_margin"
        app:layout_constraintRight_toLeftOf="@+id/site_list_isupdated"
        android:layout_marginEnd="@dimen/list_item_margin"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:layout_width="16dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/txt_site_isupdated"
        android:id="@+id/site_list_isupdated"
        app:layout_constraintLeft_toRightOf="@+id/site_list_title"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="@dimen/list_item_margin" />

</android.support.constraint.ConstraintLayout>
