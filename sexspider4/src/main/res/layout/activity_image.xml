<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.sexspider4.image.ImageActivity"
    android:id="@+id/constraintLayout">

    <ru.truba.touchgallery.GalleryWidget.GalleryViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:text="@string/txt_list_loadnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/image_text_color"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginTop="@dimen/list_empty_margin"
        android:textSize="@dimen/image_text_size" />

    <ImageView
        android:src="@drawable/ic_action_favorite_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/float_button_padding"
        android:id="@+id/imageView"
        android:contentDescription="@string/txt_menu_favorite_set"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="@dimen/float_button_margin"
        android:background="@drawable/bg_float" />

</android.support.constraint.ConstraintLayout>
