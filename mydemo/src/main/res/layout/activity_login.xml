<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fxlweb.mydemo.login.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_login_name"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4" />

    <Button
        android:text="@string/login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_login"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginTop="16dp" />

    <Button
        android:text="@string/login_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_clear"
        app:layout_constraintLeft_toRightOf="@+id/btn_login_login"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn_login_login"
        app:layout_constraintBottom_toBottomOf="@+id/btn_login_login" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_login_logining"
        app:layout_constraintLeft_toRightOf="@+id/btn_login_clear"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn_login_clear"
        app:layout_constraintBottom_toBottomOf="@+id/btn_login_clear" />

    <TextView
        android:text="@string/login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_login"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="@string/login_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_login_passwd"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5" />

</android.support.constraint.ConstraintLayout>
