<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fxlweb.mydemo.sites.SitesActivity">

    <TextView
        android:text="@string/sites_listempty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textEmpty"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/sites_listview"
        app:layout_constraintTop_toTopOf="@+id/activity_news"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_news" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/sites_listview"
        app:layout_constraintTop_toTopOf="@+id/sites_listview"
        app:layout_constraintRight_toRightOf="@+id/activity_news"
        app:layout_constraintBottom_toBottomOf="@+id/activity_news" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sites_listview"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>
